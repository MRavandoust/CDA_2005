@{ ViewData["Title"] = "Home Page"; }
@model IEnumerable<FreeLance.Models.Customer>
@{ ViewBag.LastClient = Model.Last().Name; }
<section>
    <div class="box1">
        <h2>Gestion des clients</h2>
        <p>Dernier client ajouté/modifié: @ViewBag.LastClient</p>
        <a class="button" href="@Url.Action("Create", "Clients")"> + Ajouter un nouveau client</a>
    </div>
</section>


<h3>Gestion des clients</h3>

    <table>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
        {
<tr>
    <td>@Html.DisplayFor(modelItem => item.Id)</td>
    <td>@Html.DisplayFor(modelItem => item.Name)</td>
    <td>@Html.DisplayFor(modelItem => item.Email)</td>
    <td>
        <a href ="@Url.Action("Edit", "Clients", new { id = @item.Id })"><i class="fas fa-edit"></i></a>
        <a href ="@Url.Action("Delete", "Clients", new { id = @item.Id })"><i class="fas fa-times"></i></a>
    </td>
</tr>
}


    </table>




<h3>Informations</h3>
<p>Largeur max du conteneur: 960px;</p>
<p>Police de caracteres (font): Verdana, Geneva, Tahoma, sans-serif</p>

